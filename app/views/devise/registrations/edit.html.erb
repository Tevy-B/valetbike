<div class="col-md-10 col-lg-8 mx-auto">
            <div class="card mx-auto my-5" style="max-width: 540px;">
            <%= image_tag ("image_4.jpg"), :class => "card-img-top"%>
                <div class="card-body mx-2">
                    <br>  

<h2>Edit Profile<% resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <br />
  
  <div class="field form-group">
    <% f.label :email %>
    <%= f.email_field :email, class:"form-control", placeholder:"Email", autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <br />

  <div class="field form-group">
    <% f.label :password %>
    <% if @minimum_password_length %>
      <%= f.password_field :password, class:"form-control", placeholder:"Password (#{@minimum_password_length} characters minimum, leave blank if you don't want to change it)", autocomplete: "new-password" %>
    <% else %>
      <%= f.password_field :password, class:"form-control", placeholder:"Password (leave blank if you don't want to change it)", autocomplete: "new-password" %>
    <% end %>
  </div>

  <br />

  <div class="field form-group">
    <% f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class:"form-control", placeholder:"Re-enter Password", autocomplete: "new-password" %>
  </div>

  <div class="field form-group">
    <% f.label :current_password %> <br />
    <%= f.password_field :current_password, class:"form-control", placeholder:"Current Password (we need your current password to confirm your changes)", autocomplete: "current-password" %>
  </div>

  <br />

  <div class="actions">
    <%= f.submit "Update", class:"btn btn-secondary" %>
  </div>
<% end %>

<br />

<%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger" %>

<br />

<%= link_to "Back", :back %>
<br>
                </div>
            </div>
        </div>

