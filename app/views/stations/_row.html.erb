<style>
.card{
  background: #fff;
  box-shadow: 0 6px 10px rgba(0,0,0,.08), 0 0 6px rgba(0,0,0,.05);
    transition: .3s transform cubic-bezier(.155,1.105,.295,1.12),.3s box-shadow,.3s -webkit-transform cubic-bezier(.155,1.105,.295,1.12);
}

.card:hover{
   transform: scale(1.05);
box-shadow: 0 10px 20px rgba(0,0,0,.12), 0 4px 8px rgba(0,0,0,.06);
}
</style>
<div class="col-xs-12 col-md-6 col-lg-4 col-xl-3">
<div class='card mx-auto' style='width: 16rem;'>
<%= image_tag ("image_3.png"), :class => "card-img-top"%>
<div class='card-body'>
<p class='card-text'>
  <p class="card-text"><b>Station ID:</b> <%= station.identifier.to_i-19 %></p>
  <p class="card-text"><b>Station Name:</b> <%= station.name %></p>
  <p class="card-text"><b>Station Address:</b> <%= station.address %></p>
</p>
<p>
  <%= link_to "Show bike", {:controller => 'bikes', :action => 'show', :id => station.id}, class: "btn btn-outline-dark"%>
</p>
</div>
</div>
</div>
