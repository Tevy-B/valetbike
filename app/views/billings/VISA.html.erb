<h2>VISA </h2>
<br>

<form method="post" action="create/VISA"> 
<input
            type="hidden"
            name="authenticity_token"
            value="<%= form_authenticity_token %>">
            <p>
            <label for="credits">Choose a credit plan:</label>
            <select id="credits" name="credits">
              <option value="1">1 credit (15 minutes, 1$)</option>
              <option value="5">5 credits (75 minutes, 4$)</option>
            </select>

            <p>
            <p> 
            Holder Name <input type="text"required="required"  placeholder= "" name="holder_name">
            </p>

            <p> 
                Card Number <input type="text" onkeyup="this.value=this.value.replace(/\D/g,'')"
                 onafterpaste="this.value=this.value.replace(/\D/g,'')" type="text" placeholder= "" name="card_number" maxlength="16">
            </p>

            <p> 
            Expiration Date <input type="text" required="required" onkeyup="this.value=this.value.replace(/\D/g,'')" 
            onafterpaste="this.value=this.value.replace(/\D/g,'')" placeholder= "MMYY" name="expir_date" maxlength="4">
            </p>

            <p> 
            Cvv <input type="text" required="required" onkeyup="this.value=this.value.replace(/\D/g,'')" 
            onafterpaste="this.value=this.value.replace(/\D/g,'')" placeholder= "" name="cvv" maxlength="3">
            </p>
<br>
            <p>
            <input type="submit" class="btn btn-secondary btn-sm">
            </p>


</form>

