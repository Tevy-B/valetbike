
<h1>Master Card</h1> 
<br> </br>

<form method="post" action="create/mastercard">  
<input
            type="hidden"
            name="authenticity_token"
            value="<%= form_authenticity_token %>">
    <p> 
        Holder Name <input type="text" required="required" placeholder= "" name="holder_name">

    </p>
    <p> 
        Card Number <input type="text" required="required" onkeyup="this.value=this.value.replace(/\D/g,'')" onafterpaste="this.value=this.value.replace(/\D/g,'')" type="text" placeholder= "" name="card_number" maxlength="16">
    </p>

    <p> 
    Expiration Date <input type="text" required="required" onkeyup="this.value=this.value.replace(/\D/g,'')" 
    onafterpaste="this.value=this.value.replace(/\D/g,'')" placeholder= "MMYY" name="expir_date" maxlength="4">
    </p>

    <p> 
    Cvv <input type="text" required="required" onkeyup="this.value=this.value.replace(/\D/g,'')" 
    onafterpaste="this.value=this.value.replace(/\D/g,'')" placeholder= "" name="cvv" maxlength="3">
    </p>

    

    <p>
    <input type="submit">
    </p>


</form>

