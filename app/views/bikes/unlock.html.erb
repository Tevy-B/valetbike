<%= link_to("<<Back to the station", {:controller => 'bikes', :action => 'show',:id => params[:id], :identifier=>params[:identifier]}) %>
<p> To unlock the bike, please enter the Bike # below handlebars </p>

<%= form_tag "#" do %>
  <%= label_tag :input, "bike identifier:" %>
  <%= text_field_tag :input %>
  <% @input = params[:input]%>
  <%= submit_tag "confirm"%>
  <% if @input == params[:identifier]%>
    <p> great! </p>
    <%= link_to("Continue", {:controller => 'bikes', :action => 'unlockConfirm',:id => params[:id], :identifier=>params[:identifier]}) %>
  <%elsif @input != nil && @input != params[:identifier] %>
    <p>Wrong identifier! Try it again</p>
  <% end %>  
  
<% end %>



